{
  "compilerOptions": {
    "types": ["node"],
    "target": "ESNext",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": [
      "./node_modules/@types/", "./types", "./node_modules"
    ],
    "noEmit": false,
    "jsx": "react-jsx",
    "paths": {
      "mobx-tanstack-query-api": ["./src/index.ts"],
      "mobx-tanstack-query-api/builtin": ["./src/builtin/index.ts"],
      "mobx-tanstack-query-api/cli": ["./src/cli/index.ts"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}
